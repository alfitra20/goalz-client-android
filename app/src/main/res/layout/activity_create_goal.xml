<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.CreateGoalActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/create_goal_activity_logo_iw"
        android:layout_width="100dp"
        android:layout_height="79dp"
        android:layout_marginEnd="151dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toTopOf="@+id/create_goal_activity_title_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/goal_white" />

    <EditText
        android:id="@+id/create_goal_activity_title_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#808080"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Title"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/create_goal_activity_topic_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_goal_activity_logo_iw" />

    <EditText
        android:id="@+id/create_goal_activity_topic_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#808080"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Description"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/create_goal_activity_description_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_goal_activity_title_et" />

    <EditText
        android:id="@+id/create_goal_activity_description_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:backgroundTint="#808080"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Goal Topic"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/create_goal_activity_deadline_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_goal_activity_topic_et" />

    <EditText
        android:id="@+id/create_goal_activity_deadline_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#808080"
        android:ems="10"
        android:enabled="false"
        android:fontFamily="sans-serif"
        android:hint="Deadline"
        android:inputType="none"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/create_goal_activity_divider"
        app:layout_constraintEnd_toStartOf="@+id/create_goal_activity_pick_date_ib"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_goal_activity_description_et" />

    <ImageButton
        android:id="@+id/create_goal_activity_pick_date_ib"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/create_goal_activity_deadline_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/calendar_icon" />

    <View
        android:id="@+id/create_goal_activity_divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#FFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/create_goal_activity_parent_tw"
        app:layout_constraintTop_toBottomOf="@+id/create_goal_activity_deadline_et"
        tools:layout_editor_absoluteX="30dp" />

    <TextView
        android:id="@+id/create_goal_activity_parent_tw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#FFFF"
        android:fontFamily="sans-serif"
        android:text="Create the goal under:"
        android:textColor="#d9d9d9"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/create_goal_activity_parent_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_goal_activity_divider" />

    <Spinner
        android:id="@+id/create_goal_activity_parent_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#808080"
        android:textColor="#FFFF"
        app:layout_constraintBottom_toTopOf="@+id/create_goal_activity_submit_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_goal_activity_parent_tw" />

    <Button
        android:id="@+id/create_goal_activity_submit_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#0099ff"
        android:shadowColor="@color/colorPrimary"
        android:text="CREATE GOAL"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_goal_activity_parent_sp" />


</android.support.constraint.ConstraintLayout>