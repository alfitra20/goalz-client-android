<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCC"
    tools:context=".ui.OnboardingActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/onboarding_image"
        android:layout_width="195dp"
        android:layout_height="128dp"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="29dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/onboarding_text"
        android:layout_width="371dp"
        android:layout_height="116dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="215dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/onboarding_heading"
        android:layout_width="368dp"
        android:layout_height="35dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="165dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/onboardingSlideView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:id="@+id/dots"
        android:layout_width="60dp"
        android:layout_height="27dp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="341dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        tools:layout_editor_absoluteY="383dp"></android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>