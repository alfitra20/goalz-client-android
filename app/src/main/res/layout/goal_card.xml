<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:id="@+id/goal_card_view"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    android:backgroundTint="#5f38c1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/goal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/divider"
            android:layout_marginStart="15dp"
            android:autoSizeMaxTextSize="14dp"
            android:autoSizeMinTextSize="15dp"
            android:fontFamily="@font/source_sans_pro_bold"
            android:maxHeight="10dp"
            android:maxLines="2"
            android:text="hsihishhshdkhalksdhlkahdlkhas"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#FFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/goal_description"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/divider"
            android:layout_alignStart="@+id/goal_name"
            android:autoSizeMinTextSize="12sp"
            android:ellipsize="end"
            android:fontFamily="@font/catamaran_semibold"
            android:maxLines="1"
            android:singleLine="true"
            android:text="test descriotion"
            android:textColor="#FFFF"
            android:textSize="14sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="3dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="92dp"
            android:background="#acf6f8f9" />

        <ImageView
            android:id="@+id/status_image"
            android:layout_width="53dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            app:srcCompat="@drawable/completed" />

    </RelativeLayout>

</android.support.v7.widget.CardView>