<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/resource_card_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/resource_title"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/resource_topic"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resource_title"
            android:layout_marginLeft="11dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/resource_rating"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resource_topic"
            android:layout_marginLeft="11dp"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/resource_image"
            android:src="@drawable/light"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="130dp"
            android:layout_below="@+id/resource_rating"/>

        <TextView
            android:id="@+id/resource_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resource_image"/>

        <TextView
            android:id="@+id/resource_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resource_link"/>

        <!--<View
            android:id="@+id/divider"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="140dp"
            android:background="#E75043" />-->

    </RelativeLayout>

</android.support.v7.widget.CardView>