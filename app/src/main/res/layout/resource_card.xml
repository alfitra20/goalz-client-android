<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/resource_card_view">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/resource_title"
            android:layout_width="342dp"
            android:layout_height="30dp"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/source_sans_pro_bold"
            android:maxLines="2"
            android:text="@string/title_activity_test"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/resource_topic"
            android:layout_width="223dp"
            android:layout_height="22dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="145dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:autoSizeMinTextSize="12sp"
            android:ellipsize="end"
            android:fontFamily="@font/catamaran_semibold"
            android:maxLines="1"
            android:singleLine="true"
            android:text="topic    goes herer"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/resource_url"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resource_title" />

        <TextView
            android:id="@+id/resource_url"
            android:layout_width="223dp"
            android:layout_height="18dp"
            android:layout_marginBottom="11dp"
            android:layout_marginEnd="145dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="url"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/resource_rating_level_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resource_topic" />

        <ImageView
            android:id="@+id/resource_rating_level_1"
            android:layout_width="22dp"
            android:layout_height="27dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/resource_rating_level_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resource_url"
            app:srcCompat="@drawable/thumbs_down" />

        <ImageView
            android:id="@+id/resource_rating_level_2"
            android:layout_width="22dp"
            android:layout_height="27dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/resource_rating_level_3"
            app:layout_constraintStart_toEndOf="@+id/resource_rating_level_1"
            app:layout_constraintTop_toBottomOf="@+id/resource_url"
            app:srcCompat="@drawable/thumbs_down" />

        <ImageView
            android:id="@+id/resource_rating_level_3"
            android:layout_width="22dp"
            android:layout_height="27dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/resource_rating_level_4"
            app:layout_constraintStart_toEndOf="@+id/resource_rating_level_2"
            app:layout_constraintTop_toBottomOf="@+id/resource_url"
            app:srcCompat="@drawable/thumbs_down" />

        <ImageView
            android:id="@+id/resource_rating_level_4"
            android:layout_width="22dp"
            android:layout_height="27dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/resource_rating_level_5"
            app:layout_constraintStart_toEndOf="@+id/resource_rating_level_3"
            app:layout_constraintTop_toBottomOf="@+id/resource_url"
            app:srcCompat="@drawable/thumbs_down_blank" />

        <ImageView
            android:id="@+id/resource_rating_level_5"
            android:layout_width="22dp"
            android:layout_height="27dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="258dp"
            android:layout_marginTop="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/resource_rating_level_4"
            app:layout_constraintTop_toBottomOf="@+id/resource_url"
            app:srcCompat="@drawable/thumbs_down_blank" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>